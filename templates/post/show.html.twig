<!DOCTYPE html>

<title>Post</title>

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ post.Picture }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ post.Likes }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.Date ? post.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ post.Localisation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
