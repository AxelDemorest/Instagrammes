<!DOCTYPE html>

<title>Hello SearchController!</title>

{% block body %}

{% if app.request.method == 'POST' %}
    <div>
        {% if user | length == 0 %}
            <h4>Aucun résulat pour votre recherche.</h4>
        {% else %}
            <h3 class="mt-3">Vos résulats de recherche :</h3>
            {% for nickname in user %}
                <div class="mt-3 p-3 bg-light border rounded">
                    <a href="{{ path('user_show', {'slug': user.slug}) }}">
                        <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ user.nickname }}</h6>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endif %}

{% endblock %}