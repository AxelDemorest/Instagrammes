<!DOCTYPE html>

{% block body %}
    <div>
        {% if (Pseudo | length == 0) %}
            <h4>No result for your search.</h4>
        {% else %}
            <h3 class="mt-3">Your search results :</h3>
            {% for Nickname in Pseudo %}
                <div class="mt-3 p-3 bg-light border rounded">
                    <a href="{{ path('Pseudo_show', {'slug': Nickname.slug}) }}">
                        <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ Pseudo.Nickname }}</h6>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
    </div>


{% endblock %}